@model ErronkaOndo.Models.Inkesta
@{
    ViewData["Title"] = "Inkesta";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>Band Name</title>
    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900" rel="stylesheet" type="text/css">
    <link href="fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Loading main css file -->
    <link rel="stylesheet" href="site.css">



</head>

<body class="header-collapse">

    <div id="site-content">
        <main class="main-content">

            <div class="izenburua container">

                <h2><b>Inkesta</b></h2>

            </div>

            
            <div class="row">
                <div class="col-2">
                </div>


                <div class="col-8">



                    <div class="testua">


                        <form asp-action="Index">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="puntuazioa" class="control-label"> 1-10 Zenbat gustatu zaizu jokua?</label>
                                <br />


                                <input asp-for="puntuazioa" name="radio" value="1" id="bat" type="radio" />
                                <label>1</label>
                                <input asp-for="puntuazioa" name="radio" value="2" id="bi" type="radio" />
                                <label>2</label>
                                <input asp-for="puntuazioa" name="radio" value="3" id="hiru" type="radio" />
                                <label>3</label>
                                <input asp-for="puntuazioa" name="radio" value="4" id="lau" type="radio" />
                                <label>4</label>
                                <input asp-for="puntuazioa" name="radio" value="5" id="bost" type="radio" />
                                <label>5</label>
                                <input asp-for="puntuazioa" name="radio" value="6" id="sei" type="radio" />
                                <label>6</label>
                                <input asp-for="puntuazioa" name="radio" value="7" id="zazpi" type="radio" />
                                <label>7</label>
                                <input asp-for="puntuazioa" name="radio" value="8" id="zortzi" type="radio" />
                                <label>8</label>
                                <input asp-for="puntuazioa" name="radio" value="9" id="bederatzi" type="radio" />
                                <label>9</label>
                                <input asp-for="puntuazioa" name="radio" value="10" id="hamar" type="radio" />
                                <label>10</label>





                                <span asp-validation-for="puntuazioa" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="gomendioa" class="control-label"> 1-5 Zenbat gomendatuko zenuke jokua?</label>
                                <br />


                                <input asp-for="gomendioa" name="radiob" value="1" id="bat" type="radio" />
                                <label>1</label>
                                <input asp-for="gomendioa" name="radiob" value="2" id="bi" type="radio" />
                                <label>2</label>
                                <input asp-for="gomendioa" name="radiob" value="3" id="hiru" type="radio" />
                                <label>3</label>
                                <input asp-for="gomendioa" name="radiob" value="4" id="lau" type="radio" />
                                <label>4</label>
                                <input asp-for="gomendioa" name="radiob" value="5" id="bost" type="radio" />
                                <label>5</label>

                                <span asp-validation-for="gomendioa" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="jokugaia" class="control-label">Enpresak beste joku bat garatzen badu, zer gaia aukeratuko zenuke? </label>
                                <br />

                                <input asp-for="jokugaia" name="radiobu" value="multiplayer" id="bat" type="radio" />
                                <label>Multiplayer</label>
                                <input asp-for="jokugaia" name="radiobu" value="soziala" id="bi" type="radio" />
                                <label>Soziala</label>
                                <input asp-for="jokugaia" name="radiobu" value="mahai-jokoa" id="hiru" type="radio" />
                                <label>Mahai-jokoa</label>
                                <input asp-for="jokugaia" name="radiobu" value="estrategia" id="lau" type="radio" />
                                <label>Estrategia</label>
                                <input asp-for="jokugaia" name="radiobu" value="arkade" id="bost" type="radio" />
                                <label>Arkade</label>


                                <span asp-validation-for="jokugaia" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="gustora" class="control-label">Zelan zaude enpresan?</label>
                                <input asp-for="gustora" name="radiobut" value="Oso gustora" id="bat" type="radio" />
                                <label>Oso gustora</label>
                                <input asp-for="gustora" name="radiobut" value="Gustora" id="bi" type="radio" />
                                <label>Gustora</label>
                                <input asp-for="gustora" name="radiobut" value="Ez gustora" id="hiru" type="radio" />
                                <label>Ez gustora</label>
                                <span asp-validation-for="gustora" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="hobekuntza" class="control-label">Zer hobetuko zenuke? (enpresa edo jokuari buruz)</label>
                                <br />
                                <textarea asp-for="hobekuntza" rows="4" cols="50">Idatzi testua...    </textarea>
                                <span asp-validation-for="hobekuntza" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Bidali" class="btn btn-primary" />
                            </div>
                        </form>


                    </div>








                </div>




                <div class="col-2">
                </div>



            </div>
               
                   
        </main> <!-- .main-content -->

    </div> <!-- #site-content -->

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/app.js"></script>

</body>

</html>
