@model ErronkaOndo.Models.Komentario
@{
    ViewData["Title"] = "Foroa";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

   
    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900" rel="stylesheet" type="text/css">
    <link href="fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Loading main css file -->
    <link rel="stylesheet" href="site.css">



</head>

<body>


    <main class="main-content">

        <div class="izenburua container">

            <h2 class="zentratuizenburu"><b>Foroa</b></h2>

        </div>

        <div class="row forozentratu">
            <div class="col-5 ">


                @await Component.InvokeAsync("Foroa")
            </div>

            <div class="col-2 imgforo ">
                <a asp-controller="Report" asp-action="InprimatuKomentario"> <img src="~/images/Reportimg.png" />  </a>

            </div>

            <div class="col-5">

                
                <div class="testua">
                    <b>Komentario</b>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <form id="form" class="kbox" asp-action="Index">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">

                                    <input placeholder="Testua" asp-for="testua" class="form-control" />
                                    <span asp-validation-for="testua" class="text-danger"></span>
                                </div>
                                <div class="form-group">

                                    <input placeholder="Erabiltzailea" type="text" asp-for="erabiltzailea" class="form-control" />
                                    <span asp-validation-for="erabiltzailea" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <b><label asp-for="partidaId" class="control-label"> Partida Id</label> </b> 
                                    <input  type="text" asp-for="partidaId" class="form-control" value="@ViewBag.partidaId" />
                                    <span asp-validation-for="partidaId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Komentatu" />
                                  
                                </div>
                            </form>
                        </div>
                        <div class="col-3"></div>
                    </div>
                </div>


            </div>
        </div>

    </main> <!-- .main-content -->
    
    <br />
    <br />
    <br />
    <br />

   
    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/app.js"></script>

</body>

</html>
